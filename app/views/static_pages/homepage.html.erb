<% @events.each_with_index do |e, i| %>
	<% estimated_predators = e.estimated_predators %>
	<div class = "row event">
		<div class = "small-12 column">
			<div class="row">
				<div class="small-12 large-12 columns titlebar_container">
					<div class="titlebar">
						<%= e.title %>
					</div>
				</div>
			</div>
			<div class = "panel">
				<div class = "row">
					<div class = "small-12 medium-6 columns">
						<!-- <div class = "panel"> -->
							<span class="lat"><%= e.lat %></span>
							<span class="lon"><%= e.lon %></span>
							<span class="router_points"><%= estimated_predators[1].to_json %></span>
							<!-- <br><img src="http://placehold.it/500x500&text=Image"><br> -->
							<div class="map-canvas" id="map-<%= i %>">
							</div>
						<!-- </div> -->
					</div>

					<div class="small-12 medium-6 columns">
						<table>
							<tbody>
								<tr>
									<td>
										<h5 class="title"><b><%= link_to e.title, 'javascript: void(0);' %></b></h5>
										<p class="info"><%= e.friendly_location %>. Sent at <%= e.friendly_datetime %><span class="email-time"><%= e.raw_datetime %></span><span class="walking-time"></span></p>
									</td>
								</tr>
							</tbody>
						</table>

						<table>
							<tbody>
								<tr>
									<th>Transport</th>
									<th>ETA</th>
									<th>Cost</th>
									<th>Score</th>
								</tr>
								<tr>
									<td>Walking</td>
									<td class="walking_eta"></td>
									<td></td>
									<td></td>
								</tr>
								<tr>
									<td>Bicycling</td>
									<td class="biking_eta"></td>
									<td></td>
									<td></td>
								</tr>
								<tr>
									<td class="ubering_link"><a href="javascript: void(0); ">UberX</a></td>
									<td class="ubering_eta"></td>
									<td class="ubering_exp"></td>
									<td></td>
								</tr>
							</tbody>
						</table>

						<table>
							<tbody>
								<tr>
									<td class="predator-td">
										Estimated predators: <span class="predators"><%= estimated_predators[0].round(2) %></span></td>
								</tr>
							</tbody>
						</table>

						<table>
							<tbody>
								<tr>
									<td class='percentage_bar_container'>
										<div class='percentage_text_container'>Chance: ~<span class="percentage">...</span>%</div><div class='percentage_bar' style="width: 0">  </div>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
		<div class="email_overlay">
			<% e.raw.lines.each do |l| %>
				<p><%= l %></p>
			<% end %>
		</div>
	</div>

<% end %>