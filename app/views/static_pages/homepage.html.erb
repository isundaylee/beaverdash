<% @events.each_with_index do |e, i| %>
	<% estimated_predators = e.estimated_predators %>
	<div class = "row event">
		<div class = "small-12 column">
			<div class = "panel">
				<div class = "row">
					<div class = "small-12 column">
						<div class="event_title panel">
							<h3 class="title"><%= link_to e.title, 'javascript: void(0);' %></h3>
							<p class="info"><%= e.friendly_location %>. Sent at <%= e.friendly_datetime %></p>
						</div>
					</div>
				</div>

				<div class = "row">
					<div class = "small-12 medium-6 columns">
						<div class = "panel">
							<span class="lat"><%= e.lat %></span>
							<span class="lon"><%= e.lon %></span>
							<span class="router_points"><%= estimated_predators[1].to_json %></span>
							<!-- <br><img src="http://placehold.it/500x500&text=Image"><br> -->
							<div class="map-canvas" id="map-<%= i %>">
							</div>
						</div>
					</div>

					<div class="small-12 medium-6 columns">
						<table>
							<tbody>
								<tr>
									<th>Transport</th>
									<th>ETA</th>
									<th>Expenditure</th>
									<th>Score</th>
								</tr>
								<tr>
									<td>Walking</td>
									<td></td>
									<td></td>
									<td></td>
								</tr>
								<tr>
									<td>Bicycling</td>
									<td></td>
									<td></td>
									<td></td>
								</tr>
								<tr>
									<td>Uber</td>
									<td></td>
									<td></td>
									<td></td>
								</tr>
							</tbody>
						</table>

						<table>
							<tbody>
								<tr>
									<td>
						Estimated predators: <%= estimated_predators[0] %></td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
		<div class="email_overlay">
			<% e.raw.lines.each do |l| %>
				<p><%= l %></p>
			<% end %>
		</div>
	</div>

<% end %>